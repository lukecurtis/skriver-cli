{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ESNext", "DOM"],
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
}